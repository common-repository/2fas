{% extends "dashboard/admin/admin-base.html.twig" %}

{% block page %}
    <div class="twofas-account-box-wrapper">
        <div class="twofas-account-box">
            <div class="twofas-account-box-header">
                <h3>{{ esc_html__('Sign Up', '2fas') }}</h3>
            </div>
            <div class="twofas-account-box-content">
                <form action="{{ create_url(constant('TwoFAS\\TwoFAS\\Http\\Action_Index::SUBMENU_DASHBOARD'), constant('TwoFAS\\TwoFAS\\Http\\Action_Index::ACTION_CREATE_ACCOUNT')) }}" method="post">
                    {{ create_form_nonce(constant('TwoFAS\\TwoFAS\\Http\\Action_Index::ACTION_CREATE_ACCOUNT')) | raw }}
                    <label for="twofas-email">{{ esc_html__('Your e-mail', '2fas') }}:</label>
                    <input type="email" class="js-autofocus" id="twofas-email" name="twofas[email]" value="{{ email }}" required="required" {% if email is empty %}autofocus="autofocus"{% endif %} />
                    <label for="twofas-password">{{ esc_html__('Your password', '2fas') }}:</label>
                    <input type="password" class="js-autofocus" id="twofas-password" name="twofas[password]" required="required" {% if email is not empty %}autofocus="autofocus"{% endif %} />
                    <label for="twofas-password-confirmation">{{ esc_html__('Confirm password', '2fas') }}:</label>
                    <input type="password" id="twofas-password-confirmation" name="twofas[password-confirmation]" required="required" />
                    <input type="checkbox" id="twofas-privacy-policy" name="twofas[privacy-policy]" required="required" />
                    <label for="twofas-privacy-policy" class="twofas-privacy-policy-label">
                        {{ sprintf(
                            esc_html__('By creating an account you agree to the our %1$s%2$s%3$s.', '2fas'),
                            '<a href="https://2fas.com/privacy-policy" target="_blank">',
                            esc_html__('privacy policy', '2fas'),
                            '</a>'
                        )|raw }}
                    </label>
                    <div class="twofas-submit-container">
                        <input type="submit" class="twofas-btn twofas-account-box-btn" value="{{ esc_attr__('Sign Up', '2fas') }}" />
                    </div>
                </form>
                <hr />
                <a href="{{ create_url(constant('TwoFAS\\TwoFAS\\Http\\Action_Index::SUBMENU_DASHBOARD'),
                    constant('TwoFAS\\TwoFAS\\Http\\Action_Index::ACTION_LOGIN')) }}">{{ esc_html__('Log in to the existing account', '2fas') }}</a>
            </div>
        </div>
    </div>
{% endblock %}
